{
  "compilerOptions": {
    "target": "ES5",
    "module": "es2022",
    "moduleResolution": "node",
    "lib": ["DOM", "es2022"],
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "types": ["@testing-library/jest-dom"]
}
